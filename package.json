    "turbo": "^2.5.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.3",
  "engines": {
    "node": ">=22.15.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
